pcm.dmixer {
  type asym
  playback.pcm {
    type dmix
    ipc_key_add_uid true
    ipc_key 5678293
    ipc_perm 0660
    ipc_gid audio
    slave {
      channels 2
      pcm {
      format S16_LE
      rate 48000
      nonblock true
      type hw
      card 0
      device 0
    }
    period_size 512
    buffer_size 24000
    }
    bindings {
      0 0
      1 1
      }
    }
    capture.pcm "hw:0"
    hint {
      show on
      description "Dmixer"
  }
}

# default devices
pcm.!default {
  type plug
  slave.pcm "dmixer"
}

pcm.movie {
  type plug
  slave {
    pcm "pcm.default"
  }
  #slave.pcm "dmixer"
}

pcm.wine {
  type plug
  #slave.pcm "hw:0" # direct output
  slave.pcm "dmixer"
}

